@using System.Text.RegularExpressions;
@functions{
    public static bool IsValidEmail(string s){
        string pattern = @"^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$";
        return Regex.IsMatch(s, pattern);
    }
}

